<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_botao1"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_config"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btnConfigShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_configshow"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="393dp" />

    <ListView
        android:id="@+id/lista1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:entries="@array/listaExp1"></ListView>


</LinearLayout>