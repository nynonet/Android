<?xml version="1.0" encoding="utf-8"?>
<!--TODO 13 - Personalizado a listview dos dispositivos-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/label_device_nome"/>

        <TextView
            android:id="@+id/lb_device_nome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/label_device_mac"/>

        <TextView
            android:id="@+id/lb_device_mac"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"/>
    </LinearLayout>

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/btn_device_conectar"
        android:text="@string/label_device_conectar"
        android:layout_height="match_parent"/>

</LinearLayout>